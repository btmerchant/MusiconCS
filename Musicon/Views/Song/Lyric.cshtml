@model Musicon.Models.Song

@{
    ViewBag.Title = "Lyric";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Lyric - @Model.Title</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SongId)
        @Html.HiddenFor(model => model.Title)
        @Html.HiddenFor(model => model.Artist)
        @Html.HiddenFor(model => model.Composer)
        @Html.HiddenFor(model => model.Key)
        @Html.HiddenFor(model => model.Tempo)
        @Html.HiddenFor(model => model.Length)
        @Html.HiddenFor(model => model.Status)
        @Html.HiddenFor(model => model.Vocal)
        @Html.HiddenFor(model => model.EntryDate)
        @Html.HiddenFor(model => model.Genre)
        @Html.HiddenFor(model => model.Arrangement)

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Lyric, new {  @id = "lyric" })
                @Html.ValidationMessageFor(model => model.Lyric, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}